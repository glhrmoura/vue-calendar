{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../../src/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "../../src/**/*.ts",
    "../../src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "../lib"
  ]
}
